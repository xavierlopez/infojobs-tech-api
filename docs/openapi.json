{
  "openapi": "3.0.3",
  "info": {
    "title": "InfoJobs Tech API",
    "version": "0.1.0"
  },
  "servers": [
    {
      "url": "https://infojobstech-api.onrender.com/api/offers"
    }
  ],
  "tags": [
    {
      "name": "offer"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "summary": "Get all offers",
        "tags": [
          "offer"
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/{offerId}": {
      "get": {
        "summary": "Retrieve an offer by its ID",
        "parameters": [
          {
            "in": "path",
            "name": "offerId",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "404": {
            "description": "Offer not found"
          }
        }
      }
    }
  }
}